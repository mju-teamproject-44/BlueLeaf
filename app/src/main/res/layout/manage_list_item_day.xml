<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/item_day_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"

    android:gravity="right"

    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_day_text"

        android:text="9"
        android:textSize="16sp"
        android:fontFamily="@font/korail_round_gothic_medium"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <ImageView
        android:id="@+id/item_day_icon_water"

        android:src="@drawable/manage_icon_water"
        android:visibility="gone"

        app:layout_constraintTop_toBottomOf="@id/item_day_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginTop="15dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ImageView>
