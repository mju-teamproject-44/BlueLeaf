<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".board.BoardSearchActivity">

        <androidx.appcompat.widget.Toolbar
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/boardSearchView"
                app:queryHint="검색어를 입력하시오"
                app:queryBackground="@drawable/background_radius_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </androidx.appcompat.widget.Toolbar>


        <TextView
            android:layout_margin="20dp"
            android:id="@+id/searchResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="게시글 전체 목록"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/korail_round_gothic_medium"/>

        <ListView
            android:id="@+id/boardListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="20dp" />
    </LinearLayout>
</layout>