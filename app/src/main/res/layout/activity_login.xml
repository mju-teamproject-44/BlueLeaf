<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".auth.LoginActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="296dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:layout_weight="1"
                android:paddingTop="100dp"
                android:src="@drawable/logo_default" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/bmdohyeon"
                android:gravity="center"
                android:shadowColor="#40000000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:text="잎파랑이"
                android:textColor="@color/MainColor"
                android:textSize="35sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="349dp"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/emailArea"
                style="@style/AuthEditText"
                android:layout_width="314dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/background_radius_gray"
                android:fontFamily="@font/korail_round_gothic_light"
                android:hint="이메일 입력"
                android:paddingStart="15dp"
                android:textColorHint="#808080" />

            <EditText
                android:id="@+id/passwordArea"
                style="@style/AuthEditText"
                android:layout_width="314dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/background_radius_gray"
                android:fontFamily="@font/korail_round_gothic_light"
                android:hint="비밀번호 입력"
                android:inputType="textPassword"
                android:paddingStart="15dp"
                android:textColorHint="#808080" />

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="314dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:background="@drawable/background_radius_main_color"
                android:fontFamily="@font/korail_round_gothic_bold"
                android:text="로그인"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>
</layout>