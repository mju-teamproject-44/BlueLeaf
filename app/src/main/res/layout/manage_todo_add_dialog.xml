<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="315dp"
    android:layout_height="322dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:src="@drawable/manage_calender_icon"

        android:layout_marginTop="27dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ImageView>

    <TextView
        android:text="일정 추가"
        android:textColor="@color/black"
        android:textSize="21sp"
        android:fontFamily="@font/korail_round_gothic_bold"

        android:gravity="center"

        android:layout_marginTop="101dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    
    <TextView
        android:text="관리할 항목"
        android:textSize="14sp"
        android:textColor="#7F7F7F"
        android:fontFamily="@font/korail_round_gothic_light"

        android:gravity="center"

        android:layout_marginTop="154dp"
        android:layout_marginLeft="35dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/todoTypeLayout"

        android:layout_marginTop="180dp"
        android:layout_marginLeft="31dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_width="116dp"
        android:layout_height="31dp">

        <Spinner
            android:id="@+id/todoSpinner"

            android:background="@drawable/manage_rectangle_4"

            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </Spinner>

        <ImageView
            android:src="@drawable/manage_icon_more"

            android:layout_marginTop="14dp"
            android:layout_marginRight="13dp"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>




    <TextView
        android:text="주기 입력"
        android:textSize="14sp"
        android:textColor="#7F7F7F"
        android:fontFamily="@font/korail_round_gothic_light"

        android:gravity="center"

        android:layout_marginTop="154dp"
        android:layout_marginRight="38dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/todoCycleLayout"

        android:layout_marginTop="180dp"
        android:layout_marginRight="60dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_width="39dp"
        android:layout_height="31dp">

        <ImageView
            android:src="@drawable/manage_rectangle_5"

            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:text="일"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/korail_round_gothic_light"

        android:layout_marginTop="187dp"
        android:layout_marginRight="37dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>


    <ImageView
        android:id="@+id/todoCancleButton"

        android:src="@drawable/manage_cancel_button"

        android:layout_marginLeft="23dp"
        android:layout_marginTop="265dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ImageView>

    <ImageView
        android:id="@+id/todoAddButton"

        android:src="@drawable/manage_add_button"

        android:layout_marginRight="21dp"
        android:layout_marginTop="265dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ImageView>

    <LinearLayout
        android:layout_marginTop="303dp"

        app:layout_constraintTop_toTopOf="parent"

        android:layout_width="match_parent"
        android:layout_height="19dp">
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>