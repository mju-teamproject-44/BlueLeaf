<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".auth.JoinActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="246dp"
            android:background="@color/MainColor"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:layout_weight="1"
                android:paddingTop="36dp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/bmdohyeon"
                android:gravity="center"
                android:text="잎파랑이"
                android:textColor="#FFFFFF"
                android:textSize="35sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="422dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/korail_round_gothic_medium"
                android:paddingStart="20sp"
                android:text="이메일"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/emailArea"
                style="@style/AuthEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/background_radius_stroke_gray_color"
                android:fontFamily="@font/korail_round_gothic_light"
                android:hint="exampleEmail@ippalangi.com"
                android:paddingStart="15dp"
                android:textColorHint="#ABABAB" />

            <!--            <LinearLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:background="#999999"-->
            <!--                android:layout_marginLeft="10dp"-->
            <!--                android:layout_marginRight="10dp"-->
            <!--                android:layout_height="0.5dp"-->
            <!--                />-->

            <TextView
                android:id="@+id/tv_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/korail_round_gothic_medium"
                android:paddingStart="20sp"
                android:text="비밀번호"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/passwordArea1"
                style="@style/AuthEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/background_radius_stroke_gray_color"
                android:fontFamily="@font/korail_round_gothic_light"
                android:hint="비밀번호 입력"
                android:inputType="textPassword"
                android:paddingStart="15dp"
                android:textColorHint="#ABABAB" />

            <!--            <LinearLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:background="#999999"-->
            <!--                android:layout_marginLeft="10dp"-->
            <!--                android:layout_marginRight="10dp"-->
            <!--                android:layout_height="0.5dp"-->
            <!--                />-->

            <!--            <LinearLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:background="#999999"-->
            <!--                android:layout_marginLeft="10dp"-->
            <!--                android:layout_marginRight="10dp"-->
            <!--                android:layout_height="0.5dp"-->
            <!--                />-->

            <TextView
                android:id="@+id/tv_pw_re"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/korail_round_gothic_medium"
                android:paddingStart="20sp"
                android:text="비밀번호 확인"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/passwordArea2"
                style="@style/AuthEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/background_radius_stroke_gray_color"
                android:fontFamily="@font/korail_round_gothic_light"
                android:hint="비밀번호 재입력"
                android:inputType="textPassword"
                android:paddingStart="15dp"
                android:textColorHint="#ABABAB" />

            <Button
                android:id="@+id/joinBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:background="@drawable/background_radius_main_color"
                android:fontFamily="@font/korail_round_gothic_bold"
                android:text="가입하기"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

        </LinearLayout>


    </LinearLayout>
</layout>