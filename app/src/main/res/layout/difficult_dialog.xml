<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/difficulty1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/korail_round_gothic_bold"
                android:gravity="center"
                android:text="난이도"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/korail_round_gothic_light"
                android:gravity="center"
                android:text="설정한 난이도에 맞는 식물을\n알려드릴게요." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/lowButton"
                    android:background="@drawable/button_background_green"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="초급자"
                    android:textSize="13sp"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:layout_marginLeft="15dp"/>

                <Button
                    android:id="@+id/mediumButton"
                    android:background="@drawable/button_background_green"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="중급자"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <Button
                    android:id="@+id/highButton"
                    android:background="@drawable/button_background_green"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="상급자"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/closeBtn"
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/background_radius_green"
                android:fontFamily="@font/korail_round_gothic_medium"
                android:text="완료"
                android:textColor="@color/white"
                android:textSize="17sp" />



        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>