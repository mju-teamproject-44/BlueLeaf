<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_marginTop="5dp"

    android:layout_width="match_parent"
    android:layout_height="40dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/manageRVConstLayout"

        app:layout_constraintLeft_toLeftOf="parent"

        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/manageRVWater"

            android:src="@drawable/manage_icon_water_color"

            android:visibility="visible"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            android:layout_marginLeft="16dp"

            android:scaleType="fitXY"

            android:layout_width="20dp"
            android:layout_height="20dp">
        </ImageView>

        <ImageView
            android:id="@+id/manageRVPlant"

            android:src="@drawable/manage_icon_plant_color"

            android:visibility="gone"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            android:layout_marginLeft="16dp"

            android:scaleType="fitXY"

            android:layout_width="20dp"
            android:layout_height="20dp">
        </ImageView>

        <ImageView
            android:id="@+id/manageRVFe"

            android:src="@drawable/manage_icon_fe_color"

            android:visibility="gone"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            android:layout_marginLeft="16dp"

            android:scaleType="fitXY"

            android:layout_width="20dp"
            android:layout_height="20dp">
        </ImageView>

        <ImageView
            android:id="@+id/manageRVSun"

            android:src="@drawable/manage_icon_sun_color"

            android:visibility="gone"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            android:layout_marginLeft="16dp"

            android:scaleType="fitXY"

            android:layout_width="20dp"
            android:layout_height="20dp">
        </ImageView>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/manageTodoTextView"

        android:text="주기"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:fontFamily="@font/korail_round_gothic_bold"

        android:gravity="center_vertical"

        android:layout_marginLeft="20dp"

        app:layout_constraintLeft_toRightOf="@id/manageRVConstLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    </TextView>

    <TextView
        android:id="@+id/manageDdayTextView"

        android:text="#일 뒤"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:fontFamily="@font/korail_round_gothic_light"

        android:gravity="center"

        android:layout_marginRight="65dp"

        app:layout_constraintRight_toRightOf="parent"

        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    </TextView>

    <ImageView
        android:src="@drawable/manage_line_rv"

        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ImageView>

    <ImageView
        android:id="@+id/manageTodoXButton"

        android:src="@drawable/manage_icon_x"

        android:scaleType="fitXY"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginRight="15dp"

        android:layout_width="20dp"
        android:layout_height="20dp">
    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>